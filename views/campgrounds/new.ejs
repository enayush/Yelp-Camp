<% layout('layouts/boilerplate') %>

<div class="row">
    
    <div class="col-6 offset-3">
        <h1 class="text-center">New Campground</h1>
    <form action="/campgrounds" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="title">Title : </label>
            <input class="form-control" type="text" name="campgrounds[title]" id="title" placeholder="Enter title" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Enter Title
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="name">Location : </label>
            <input class="form-control" type="text" name="campgrounds[location]" id="location" placeholder="Enter location" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Enter Location
            </div>
        </div>
        
        <div class="col-auto mb-3">
            <label class="sr-only" for="inlineFormInputGroup">Price :</label>
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">$</div>
              </div>
              <input class="form-control" type="text" name="campgrounds[price]" id="price" placeholder="0.00" required>
              <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Enter Price
            </div>
            </div>
          </div>
        <div class="mb-3">
            <label class="form-label" for="description">description : </label>
            <textarea class="form-control" type="text" name="campgrounds[description]" id="description" placeholder="Enter description" required></textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Enter Description
            </div>
        </div>
        <div class="mb-3">
            <div class="form-file custom-file">
                <input type="file" class="form-file-input" id="image" name="image" multiple>
                <label class="form-file-label" for="image">
                    <span class="form-file-text custom-file-label">Choose image(s)...</span>
                    <span class="form-file-button">Browse</span>
                </label>
            </div>
        </div>
        <div class="mb-3">
            <button class="btn btn-success" type="submit">Add Place</button>
        </div>
        
    </form>
    <a href="/campgrounds">Cancel</a>
    </div>
</div>
